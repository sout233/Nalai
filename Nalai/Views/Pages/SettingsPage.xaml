                    </Grid>
                </StackPanel>

            </Border>
            <Border
                CornerRadius="8,8,8,8"
                Margin="2"
                Padding="12"
                MinWidth="150"
                Background="{ui:ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ui:ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1,1,1,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Border CornerRadius="50" Width="40" Height="40">
                        <Border.Background>
                            <ImageBrush ImageSource="pack://application:,,,/Assets/zj_avatar.jpg" />
                        </Border.Background>
                    </Border>
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="12,0,0,0">
                        <TextBlock Text="SOUSUKE 7" FontSize="16" FontWeight="SemiBold" />
                        <TextBlock Text="{I18N {x:Static resources:LangKeys.setting_contributor}}" />
                    </StackPanel>
                </Grid>
            </Border>
        </StackPanel>
        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="{I18N {x:Static resources:LangKeys.setting_about_nalai}}" />

        <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
        <TextBlock Margin="0,12,0,0" Text="Made with INTERNET by sout" />
        <TextBlock Margin="0,12,0,0" Text="疲惫开发中..." />

    </StackPanel>
</Page>