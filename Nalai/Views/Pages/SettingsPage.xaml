<Page
    x:Class="Nalai.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:Nalai.Helpers"
    xmlns:local="clr-namespace:Nalai.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:resources="clr-namespace:Nalai.Resources"
    xmlns:settings="clr-namespace:Nalai.Views.Pages.Settings"
    Title="{I18N {x:Static resources:LangKeys.Settings_Title}}"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>
    <StackPanel>
        <ui:CardAction
            Margin="0,0,0,0"
            Padding="0"
            VerticalAlignment="Stretch"
            Command="{Binding ViewModel.NavigateForwardCommand}"
            CommandParameter="{x:Type settings:SettingGeneralPage}"
            IsChevronVisible="False">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Viewbox Height="24" Width="24" Margin="12,0,0,0">
                    <ui:SymbolIcon Symbol="Settings24"/>
                </Viewbox>
                
                <StackPanel
                    Grid.Column="1"
                    Margin="24"
                    VerticalAlignment="Center">
                    <ui:TextBlock
                        Margin="0"
                        FontTypography="BodyStrong"
                        Text="General"
                        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="开机启动，更新检查，语言等"
                        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </Grid>
        </ui:CardAction>       
        <ui:CardAction
            Margin="0,6,0,0"
            Padding="0"
            VerticalAlignment="Stretch"
            Command="{Binding ViewModel.NavigateForwardCommand}"
            CommandParameter="{x:Type settings:SettingGeneralPage}"
            IsChevronVisible="False">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Viewbox Height="24" Width="24" Margin="12,0,0,0">
                    <ui:SymbolIcon Symbol="Color24"/>
                </Viewbox>
                
                <StackPanel
                    Grid.Column="1"
                    Margin="24"
                    VerticalAlignment="Center">
                    <ui:TextBlock
                        Margin="0"
                        FontTypography="BodyStrong"
                        Text="Appearance"
                        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="主题颜色，显示模式等"
                        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </Grid>
        </ui:CardAction>    
        <ui:CardAction
            Margin="0,6,0,0"
            Padding="0"
            VerticalAlignment="Stretch"
            Command="{Binding ViewModel.NavigateForwardCommand}"
            CommandParameter="{x:Type settings:SettingGeneralPage}"
            IsChevronVisible="False">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Viewbox Height="24" Width="24" Margin="12,0,0,0">
                    <ui:SymbolIcon Symbol="ArrowDownload24"/>
                </Viewbox>
                
                <StackPanel
                    Grid.Column="1"
                    Margin="24"
                    VerticalAlignment="Center">
                    <ui:TextBlock
                        Margin="0"
                        FontTypography="BodyStrong"
                        Text="Download"
                        TextWrapping="WrapWithOverflow" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="保存目录，线程数，代理设置等"
                        TextWrapping="WrapWithOverflow" />
                </StackPanel>
            </Grid>
        </ui:CardAction>
    </StackPanel>

</Page>